<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>SITE_MAPS_FILE_PATH</param-name>
        <param-value>/WEB-INF/siteMaps.properties</param-value>
    </context-param>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>khoand.filter.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>khoand.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>khoand.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>khoand.controller.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveToCartStore</servlet-name>
        <servlet-class>khoand.controller.RemoveToCartStore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartStore</servlet-name>
        <servlet-class>khoand.controller.AddToCartStore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>khoand.controller.CheckOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewAcountServlet</servlet-name>
        <servlet-class>khoand.controller.CreateNewAcountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeteleController</servlet-name>
        <servlet-class>khoand.controller.DeteleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadViewOnlineShopping</servlet-name>
        <servlet-class>khoand.controller.LoadViewOnlineShopping</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>khoand.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveItemToCartServlet</servlet-name>
        <servlet-class>khoand.controller.RemoveItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeachController</servlet-name>
        <servlet-class>khoand.controller.SeachController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TriggerAppServle</servlet-name>
        <servlet-class>khoand.controller.TriggerAppServle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>khoand.controller.UpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/AddItemToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveToCartStore</servlet-name>
        <url-pattern>/RemoveToCartStore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartStore</servlet-name>
        <url-pattern>/AddToCartStore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/CheckOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewAcountServlet</servlet-name>
        <url-pattern>/CreateNewAcountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeteleController</servlet-name>
        <url-pattern>/DeteleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadViewOnlineShopping</servlet-name>
        <url-pattern>/LoadViewOnlineShopping</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveItemToCartServlet</servlet-name>
        <url-pattern>/RemoveItemToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeachController</servlet-name>
        <url-pattern>/SeachController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TriggerAppServle</servlet-name>
        <url-pattern>/TriggerAppServle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/UpdateController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!--   <welcome-file-list>
        <welcome-file>DispathServerlet</welcome-file>
    </welcome-file-list> -->
    <error-page>
        <error-code>404</error-code>
        <location>/errors404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors500.html</location>
    </error-page>
    <resource-ref>
        <res-ref-name>JohnyEnglishDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
